<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#040404">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="100">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textBoxField"
            android:layout_weight="118.94"
            android:textColor="#ffffff"
            android:gravity="bottom|end"
            android:paddingRight="@dimen/abc_action_bar_icon_vertical_padding_material"
            android:textSize="@dimen/abc_action_bar_stacked_max_height"
            android:maxLength="10" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="443dp"
            android:weightSum="100">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:weightSum="100"
                android:layout_weight="20">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="MR+"
                    android:id="@+id/button_mr_1"
                    android:layout_below="@+id/editText"
                    android:layout_alignParentStart="true"
                    android:layout_weight="25"
                    android:background="@color/background_material_light" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="+/-"
                    android:id="@+id/button_mr_2"
                    android:shadowColor="#ff7b00"
                    android:layout_alignBottom="@+id/button_mr_3"
                    android:layout_toEndOf="@+id/button_mr_3"
                    android:layout_weight="25"
                    android:background="@color/background_material_light" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="C"
                    android:id="@+id/button_mr_3"
                    android:layout_below="@+id/editText"
                    android:layout_toStartOf="@+id/textView"
                    android:shadowColor="#ff7b00"
                    android:layout_weight="25"
                    android:background="@color/background_material_light" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/addition"
                    android:id="@+id/button_op_1"
                    android:layout_below="@+id/editText"
                    android:layout_toStartOf="@+id/textView"
                    android:shadowColor="#ff7b00"
                    android:layout_weight="25"
                    android:background="@color/colorOrange"
                    android:textSize="@dimen/abc_action_bar_progress_bar_size" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="100"
                android:layout_weight="20">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="1"
                    android:id="@+id/button_1"
                    android:layout_below="@+id/editText"
                    android:layout_alignParentStart="true"
                    android:layout_weight="25"
                    android:textColor="#030303"
                    android:shadowColor="#ffffff"
                    android:background="#ffffff"
                    android:textStyle="normal"
                    android:textSize="@dimen/abc_action_bar_progress_bar_size"
                    android:focusableInTouchMode="false" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="2"
                    android:id="@+id/button_2"
                    android:shadowColor="#ff7b00"
                    android:layout_alignBottom="@+id/button_op_3"
                    android:layout_toEndOf="@+id/button_op_3"
                    android:layout_weight="25"
                    android:background="@color/colorWhit"
                    android:textSize="@dimen/abc_action_bar_progress_bar_size" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="3"
                    android:id="@+id/button_3"
                    android:layout_below="@+id/editText"
                    android:layout_toStartOf="@+id/textView"
                    android:shadowColor="#ff7b00"
                    android:layout_weight="25"
                    android:background="@color/colorWhit"
                    android:textSize="@dimen/abc_action_bar_progress_bar_size" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/subtraction"
                    android:id="@+id/button_op_2"
                    android:layout_below="@+id/editText"
                    android:layout_toStartOf="@+id/textView"
                    android:shadowColor="#ff7b00"
                    android:layout_weight="25"
                    android:background="@color/colorOrange"
                    android:textSize="@dimen/abc_action_bar_progress_bar_size" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="100"
                android:layout_weight="20">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="4"
                    android:id="@+id/button_4"
                    android:layout_below="@+id/editText"
                    android:layout_alignParentStart="true"
                    android:layout_weight="25"
                    android:background="@color/colorWhit"
                    android:textSize="@dimen/abc_action_bar_progress_bar_size" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="5"
                    android:id="@+id/button_5"
                    android:shadowColor="#ff7b00"
                    android:layout_alignBottom="@+id/button_6"
                    android:layout_toEndOf="@+id/button_6"
                    android:layout_weight="25"
                    android:background="@color/colorWhit"
                    android:textSize="@dimen/abc_action_bar_progress_bar_size" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="6"
                    android:id="@+id/button_6"
                    android:layout_below="@+id/editText"
                    android:layout_toStartOf="@+id/textView"
                    android:shadowColor="#ff7b00"
                    android:layout_weight="25"
                    android:background="@color/colorWhit"
                    android:textSize="@dimen/abc_action_bar_progress_bar_size" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/multiplication"
                    android:id="@+id/button_op_3"
                    android:layout_below="@+id/editText"
                    android:layout_toStartOf="@+id/textView"
                    android:shadowColor="#ff7b00"
                    android:layout_weight="25"
                    android:background="@color/colorOrange"
                    android:textSize="@dimen/abc_action_bar_progress_bar_size" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="100"
                android:layout_weight="20" >

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="7"
                    android:id="@+id/button_7"
                    android:layout_below="@+id/editText"
                    android:layout_alignParentStart="true"
                    android:layout_weight="25"
                    android:background="@color/colorWhit"
                    android:textSize="@dimen/abc_action_bar_progress_bar_size" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="8"
                    android:id="@+id/button_8"
                    android:shadowColor="#ff7b00"
                    android:layout_alignBottom="@+id/button_9"
                    android:layout_toEndOf="@+id/button_9"
                    android:layout_weight="25"
                    android:background="@color/colorWhit"
                    android:textSize="@dimen/abc_action_bar_progress_bar_size" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="9"
                    android:id="@+id/button_9"
                    android:layout_below="@+id/editText"
                    android:layout_toStartOf="@+id/textView"
                    android:shadowColor="#ff7b00"
                    android:layout_weight="25"
                    android:background="@color/colorWhit"
                    android:textSize="@dimen/abc_action_bar_progress_bar_size" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/division"
                    android:id="@+id/button_op_4"
                    android:layout_below="@+id/editText"
                    android:layout_toStartOf="@+id/textView"
                    android:shadowColor="#ff7b00"
                    android:layout_weight="25"
                    android:background="@color/colorOrange"
                    android:textSize="@dimen/abc_action_bar_progress_bar_size" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="90"
                android:layout_weight="20"
                android:layout_gravity="center_horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:id="@+id/button_0"
                    android:layout_below="@+id/editText"
                    android:layout_alignParentStart="true"
                    android:layout_weight="25"
                    android:background="@color/colorWhit"
                    android:textSize="@dimen/abc_action_bar_progress_bar_size" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=","
                    android:id="@+id/button_10"
                    android:layout_below="@+id/editText"
                    android:layout_toStartOf="@+id/textView"
                    android:shadowColor="#ff7b00"
                    android:layout_weight="50"
                    android:background="@color/colorWhit"
                    android:textSize="@dimen/abc_action_bar_progress_bar_size" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="="
                    android:id="@+id/button_equals"
                    android:layout_below="@+id/editText"
                    android:layout_toStartOf="@+id/textView"
                    android:shadowColor="#ff7b00"
                    android:layout_weight="25"
                    android:background="@color/colorOrange"
                    android:textSize="@dimen/abc_action_bar_progress_bar_size" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
